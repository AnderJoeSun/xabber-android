<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:maxWidth="280dp"
    android:layout_height="58dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:background="?android:attr/selectableItemBackground">
    <!--
    prev attributes of ^^^^^^^^^
    android:layout_width="280dp"
    android:maxWidth was not specified
    -->

    <RelativeLayout
        android:id="@+id/iconLayout"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/ivFileIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_file"
            android:background="?attr/round_background"
            android:paddingRight="11dp"
            android:paddingLeft="11dp"
            android:tint="?attr/shevron_file_icons_color"
            />


        <ProgressBar
            android:id="@+id/uploadProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_shape_transparent"
            android:elevation="1dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="50"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/round_shape_transparent"
            style="?android:attr/progressBarStyleHorizontal"
            android:visibility="gone"
            />

        <ImageButton
            android:id="@+id/ivCancelDownload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:background="@drawable/ripple_background_circle"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@id/iconLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="middle"
            android:maxWidth="196dp"
            android:singleLine="true"
            android:text="Undefined file"
            android:textColor="?attr/file_message_text_color"
            android:textStyle="bold" />


        <com.xabber.android.ui.widget.PlayerVisualizerView
            android:id="@+id/audioVisualizer"
            android:layout_width="150dp"
            android:layout_height="24dp"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/audioProgress"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="0 bytes"
            android:textColor="?attr/file_message_text_color" />

    </LinearLayout>

</RelativeLayout>