<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_balloon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/message_background"
    android:padding="0dp"
    android:elevation="1dp"
    android:clickable="true">

    <TextView
        android:id="@+id/message_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname@example.com"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/message_not_decrypted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otr_not_decrypted_message"
        android:visibility="gone"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black_text"
        android:text="hello, hello!"
        />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/message_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/grey_600"
        android:textSize="10sp"
        android:text="11:40"
        />

    <ImageView
        android:id="@+id/message_encrypted_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/message_time"
        android:layout_toRightOf="@+id/message_time"
        android:layout_toEndOf="@+id/message_time"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/ic_lock"
        />

    <ImageView
        android:id="@+id/message_status_icon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/message_time"
        android:layout_toRightOf="@+id/message_encrypted_icon"
        android:layout_marginLeft="4dp"
        android:src="@drawable/ic_message_synced_14dp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:id="@+id/message_progress_bar"
        android:layout_marginRight="4dp"
        android:layout_alignBottom="@+id/message_time"
        android:layout_toLeftOf="@+id/message_file_info"
        android:layout_toStartOf="@+id/message_file_info" />

    <TextView
        android:id="@+id/message_file_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/message_balloon"
        android:layout_toStartOf="@+id/message_status_icon"
        android:layout_toLeftOf="@+id/message_status_icon"

        android:paddingRight="8dp"
        android:paddingEnd="8dp"

        tools:text="Uploading.. 1/3"

        android:textSize="10sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/message_text_for_filenames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="160dp"
        android:text="some_file_name.txt"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/imageGridContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        />

    <include layout="@layout/file_list_layout"
        android:visibility="gone" android:id="@+id/fileLayout" />

</android.support.constraint.ConstraintLayout>