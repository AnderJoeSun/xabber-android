<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F5F5"
        android:elevation="4dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 4 of 4"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure your account by linking it with at least one social network or email. If you don’t do that and lose your password, you’ll never be able to restore access to your account!"
            android:paddingLeft="4dp"
            android:layout_marginBottom="16dp"
            />

        <LinearLayout
            android:id="@+id/itemGoogle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/ivGoogle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_google_plus_disabled"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                >

                <TextView
                    android:id="@+id/tvNameGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_text"
                    tools:text="@tools:sample/full_names"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvStatusGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/grey_500"
                    android:text="@string/title_not_linked_account"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvActionGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:gravity="right"
                android:layout_gravity="center_vertical"
                android:textColor="@color/grey_500"
                android:text="@string/action_connect"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemFacebook"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_facebook_disabled"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                >

                <TextView
                    android:id="@+id/tvNameFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_text"
                    tools:text="@tools:sample/full_names"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvStatusFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/grey_500"
                    android:text="@string/title_not_linked_account"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvActionFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:textColor="@color/grey_500"
                android:text="@string/action_connect"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemTwitter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/ivTwitter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_twitter_disabled"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                >

                <TextView
                    android:id="@+id/tvNameTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_text"
                    tools:text="@tools:sample/full_names"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tvStatusTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/grey_500"
                    android:text="@string/title_not_linked_account"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvActionTwitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_marginLeft="24dp"
                android:textColor="@color/grey_500"
                android:text="@string/action_connect"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:theme="@style/BlueButton"
                android:paddingRight="18dp"
                android:paddingLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="@string/title_start_messaging"
                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>